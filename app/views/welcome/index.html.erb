<!DOCTYPE html>
<html>
<body>
    <header>
      <% if session[:user_id].nil? %>
      <div id="login">
        <%= form_tag session_path do%> 
        <%= label_tag "email: " %>
        <%= text_field_tag :email%>
        <%= label_tag "password: " %>
        <%= password_field_tag :password%>
        <%= submit_tag "Login!" %>
        <% end %>
      </div>

      <div class="bar_right">
        <p><em> not a member? </em><%=link_to "Sign Up", controller: "users", action: "new"%></p>
      </div>
      <% end %>
    </header>
  <div id="splashpage">
    <div id="welcome_title">
      <h1> PoorPal</h1>
    </div>
    
    <div id="preview-container">
      <div class="search">
      </div>
      <div class="list">
      </div>
      <div class="email">
      </div>
    </div>

    <div id="caption">
      <ul>
        <li>Search for Cheap Products</li>
        <li>Make a Shopping List</li>
        <li>Text or Email List</li>
      </ul>
    </div>

    <div id="subtitle">

      <div class="phrase">
        <h3> ...find the cheapest prices on millions of products!</h3>
      </div>

      <div class="phrase_photo">
      </div>

    </div>
  </div>
  <footer>
    <ul>
      <li>&copy; poorpal.com</li>
    </ul>
  </footer>
</body>
</html>