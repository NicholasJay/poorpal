
<h1><%= @user.first_name %>'s Shopping Lists </h1>
<hr></hr>
<div class="newlist">
<h3><%= link_to "Create New Shopping List", new_user_shopping_list_path(@user.id) %></h3>
</div>

<% @shopping_lists.each do |list| %>
<div id="join">
<h3><%= link_to "#{list.title}", user_shopping_list_products_path(@user.id, list.id) %></h3>
    <form action="<%= user_shopping_list_path(@user.id, list.id) %>" method="POST" >
      <input type="hidden" name="_method" value="DELETE" />
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
      <button>Delete</button>
    </form>
</div>
<% end %>

